
<% if (locals.user) { %>
    <% catHearthClass = locals.cat.isFavorite ? 'fi-ss-heart' : 'fi-rs-heart' %>
    <i type="button" 
    class="btn-favorite fi <%= catHearthClass %>"
    data-is-favorite="<%= cat.isFavorite %>" 
    data-cat-id="<%= cat.id %>" 
    onclick="favoriteButtonHandler(this)" >
    </i>
<% } %>